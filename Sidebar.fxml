<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="35" style="-fx-background-color: #0F172A; -fx-padding: 50 0 0 0;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo2.SidebarController">

    <Button onAction="#goToDashboard" style="-fx-background-color: transparent;             -fx-text-fill: white;             -fx-font-size: 18;">
      <graphic>
         <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../../../../java/icons/Home.png" />
            </image></ImageView>
      </graphic></Button>

    <Button onAction="#goToApplications" style="-fx-background-color: transparent;             -fx-text-fill: white;             -fx-font-size: 18;">
      <graphic>
         <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../../../../java/icons/Applications.png" />
            </image></ImageView>
      </graphic></Button>

    <Button style="-fx-background-color: transparent;             -fx-text-fill: white;             -fx-font-size: 18;">
      <graphic>
         <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" />
      </graphic></Button>

    <Button onAction="#logout" style="-fx-background-color: transparent;             -fx-text-fill: white;             -fx-font-size: 18;">
      <graphic>
         <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" />
      </graphic></Button>

</VBox>
