<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">

    <!-- LEFT SIDE (IMAGE / COLOR PANEL) -->
    <AnchorPane prefHeight="600.0" prefWidth="500.0" style="-fx-background-color: #E6E4FF;">
        <children>
            <ImageView fx:id="logo_image" fitHeight="180.0" fitWidth="225.0" layoutX="138.0" layoutY="77.0" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="logo_description_label" layoutX="80.0" layoutY="336.0" prefHeight="221.0" prefWidth="330.0" />
        </children></AnchorPane>

    <!-- RIGHT SIDE (LOGIN FORM) -->
    <AnchorPane prefHeight="600.0" prefWidth="500.0" style="-fx-background-color: white;">
        <Label layoutX="119.0" layoutY="392.0" prefHeight="35.0" prefWidth="141.0" text="Not a user?">
            <font>
                <Font name="Arial Rounded MT Bold" size="18.0" />
            </font>
        </Label>
        <Button fx:id="Signup_button" layoutX="252.0" layoutY="391.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="141.0" style="-fx-background-color: transparent; -fx-cursor: hand; -fx-cursor: hand;" text="Sign up!" textFill="#1b1b1b" underline="true">
            <font>
                <Font name="Arial Black" size="17.0" />
            </font>
        </Button>
        <Label fx:id="nextstep_label" alignment="CENTER" contentDisplay="CENTER" layoutX="190.0" layoutY="96.0" text="NEXTSTEP" AnchorPane.topAnchor="70.0">
            <font>
                <Font name="Segoe Print Bold" size="22.0" />
            </font>
        </Label>
        <Label fx:id="username_label" layoutX="108.0" layoutY="160.0" text="Username">
            <font>
                <Font name="Arial Rounded MT Bold" size="13.0" />
            </font>
        </Label>
        <Label fx:id="password_label" layoutX="108.0" layoutY="250.0" text="Password">
            <font>
                <Font name="Arial Rounded MT Bold" size="13.0" />
            </font>
        </Label>
        <TextField fx:id="usename_tf" layoutX="108.0" layoutY="190.0" prefHeight="28.0" prefWidth="287.0" style="-fx-background-color: #d1d6de; -fx-border-color: black; -fx-border-radius: 10; -fx-background-radius: 10;">
            <font>
                <Font name="Arial Rounded MT Bold" size="13.0" />
            </font>
        </TextField>
        <PasswordField fx:id="password_tf" layoutX="108.0" layoutY="280.0" prefHeight="28.0" prefWidth="287.0" style="-fx-background-color: #d1d6de; -fx-border-color: black; -fx-border-radius: 10; -fx-background-radius: 10;" />
        <Button fx:id="login_button" layoutX="308.0" layoutY="334.0" mnemonicParsing="false" prefHeight="28.0" prefWidth="88.0" style="-fx-background-color: #E6E4FF; -fx-background-radius: 10; -fx-cursor: hand;" text="Log in">
            <font>
                <Font name="Arial Rounded MT Bold" size="16.0" />
            </font>
        </Button>
    </AnchorPane>
</HBox>
