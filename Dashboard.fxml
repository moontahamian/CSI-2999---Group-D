<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="699.0"
            prefWidth="1099.0"
            style="-fx-background-color: #E6E4FF;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.demo2.DashboardController">

    <!--  LEFT SIDEBAR   -->
    <left>
        <fx:include source="Sidebar.fxml"/>
    </left>

    <!--  CENTER CONTENT  -->
    <center>
        <VBox spacing="30">

            <padding>
                <Insets bottom="40" left="40" right="40" top="40" />
            </padding>

            <!-- HEADER -->
            <Label fx:id="welcomeLabel"
                   style="-fx-font-size: 22px; -fx-font-weight: bold;"
                   text="Welcome" />

            <!-- CARDS -->
            <HBox spacing="20">
                <VBox fx:id="totalAppsCard"
                      spacing="10"
                      style="-fx-background-color: white; -fx-background-radius: 12;"
                      HBox.hgrow="ALWAYS">

                    <padding>
                        <Insets bottom="15" left="15" right="15" top="15" />
                    </padding>

                    <Label style="-fx-font-weight: bold; -fx-font-size: 14px;"
                           text="Total Applications" />

                    <Label fx:id="totalAppsLabel"
                           style="-fx-font-size: 36px; -fx-font-weight: bold;"
                           text="0" />
                </VBox>

                <VBox fx:id="totalInterviewCard"
                      spacing="10"
                      style="-fx-background-color: white; -fx-background-radius: 12;"
                      HBox.hgrow="ALWAYS">

                    <padding>
                        <Insets bottom="15" left="15" right="15" top="15" />
                    </padding>

                    <Label style="-fx-font-weight: bold; -fx-font-size: 14px;"
                           text="Total Interviews Scheduled" />

                    <Label fx:id="totalInterviewLabel"
                           style="-fx-font-size: 36px; -fx-font-weight: bold;"
                           text="0" />
                </VBox>
            </HBox>

            <!-- CHARTS -->
            <HBox spacing="20" VBox.vgrow="ALWAYS">

                <VBox spacing="10"
                      style="-fx-background-color: white;
                             -fx-background-radius: 12;
                             -fx-padding: 15;"
                      HBox.hgrow="ALWAYS">

                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;"
                           text="Application Status" />

                    <BarChart fx:id="barChart" VBox.vgrow="ALWAYS">
                        <xAxis>
                            <CategoryAxis fx:id="xAxis" />
                        </xAxis>
                        <yAxis>
                            <NumberAxis fx:id="yAxis" />
                        </yAxis>
                    </BarChart>
                </VBox>

                <VBox spacing="10"
                      style="-fx-background-color: white;
                             -fx-background-radius: 12;
                             -fx-padding: 15;"
                      HBox.hgrow="ALWAYS">

                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;"
                           text="Status Breakdown" />

                    <PieChart fx:id="pieChart" VBox.vgrow="ALWAYS" />
                </VBox>

            </HBox>

        </VBox>
    </center>

</BorderPane>