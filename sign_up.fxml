<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo2.SignUpController">

    <!-- LEFT SIDEBAR -->
    <VBox alignment="CENTER" prefHeight="700.0" prefWidth="357.0" style="-fx-background-color: #0F172A;">

        <Label style="-fx-text-fill: white;                       -fx-font-size: 26;                       -fx-font-weight: bold;" text="WELCOME" />

        <Label style="-fx-text-fill: #94A3B8;                       -fx-padding: 10 0 0 0;" text="Create your account" />

    </VBox>

    <!-- RIGHT MAIN CONTENT -->
    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #E6E4FF;" HBox.hgrow="ALWAYS">

        <!-- Spacer -->
        <Region VBox.vgrow="ALWAYS" />

        <!-- SIGN UP CARD -->
        <VBox alignment="CENTER_LEFT" maxWidth="400" spacing="18" style="-fx-background-color: white;                      -fx-background-radius: 20;                      -fx-padding: 40;">

            <Label style="-fx-font-size: 22;                           -fx-font-weight: bold;" text="Sign Up" />

            <TextField fx:id="name_text" prefHeight="40" promptText="Full Name" style="-fx-background-radius: 10;" />

            <PasswordField fx:id="password_text" prefHeight="40" promptText="Password" style="-fx-background-radius: 10;" />

            <PasswordField fx:id="confirm_password_text" prefHeight="40" promptText="Confirm Password" style="-fx-background-radius: 10;" />

            <Button fx:id="create_button" maxWidth="Infinity" onAction="#create_button_clicked" prefHeight="45" style="-fx-background-color: #0F172A;                      -fx-text-fill: white;                      -fx-background-radius: 10;                      -fx-font-weight: bold;" text="Create Account" />
            <Label fx:id="message_label" textFill="red" wrapText="true" />


        </VBox>

        <!-- Bottom Spacer -->
        <Region VBox.vgrow="ALWAYS" />

    </VBox>

</HBox>
